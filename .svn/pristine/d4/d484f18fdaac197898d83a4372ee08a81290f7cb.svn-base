.bkTop {
    width:100%;
    height: 100%;
    background: -o-linear-gradient(left top,#D3D3D3,#BC8F8F); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(left top, #D3D3D3,#BC8F8F); /* Firefox 3.6 - 15 */
    background: -webkit-linear-gradient(180deg, #D3D3D3,#BC8F8F);
    background: linear-gradient(left top,#D3D3D3,#BC8F8F);
}

